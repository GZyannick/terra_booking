<div class="navbar">
  <div class="navbar-brand">
    <img id = "alien" src= <%= asset_path "alien.png"%>/>
  </div>
  <div class="navtext">
  <%= link_to 'Terra Booking', root_path, class: "terra-title" %>
    <%# <p class="terra-title">Terra Booking</p> %>
    <% unless user_signed_in? %>
      <%= link_to 'Log in', new_user_session_path, id: "Login"  %>
      <%= link_to 'Sign up', new_user_registration_path %>
    <% else %>
      <%= link_to 'Log out', destroy_user_session_path , method: :delete %>
    <% end %>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  <div class="card">
  <h2>Log in</h2>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  

  <div class="form-actions">
  <div class="signup">
      <div class="growing">
      <%= f.button :submit, "Log in", class: 'btn btn-secondary '%>
      </div> 
      <% end %>
  <div class="boutons_log"><%= render "devise/shared/links" %></div>
   
   </div>

</div>
  </div>
  </div>